
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="card card-block">
        <% if user_signed_in? %>
          <h4 class="card-title">Your Account</h4>
          <p class="card-text"><%= link_to current_user.username,
          user_path(current_user.username) %></p>
        <% else %>
          <p class="card-text"><%= link_to "Sign up now!", signup_path  %>
        <% end %>
      </div>
    </div>

    <div class="col-md-8">
      <% if user_signed_in? %>
        <%= link_to 'New Tweet', new_tweet_path, class: "btn btn-primary" %>
      <% end %>
      <div class="list-group">

          <% @tweets.each do |tweet| %>
            <%= link_to tweet, class: "list-group-item list-group-item-action" do %>
              <h5 class="list-group-item-heading"><%= tweet.user.username %></h5>
              <p class="list-group-item-text"><%= tweet.content %></p>

              <% if tweet.user == current_user %>
                <%= link_to 'Edit', edit_tweet_path(tweet) %>
                <%= link_to 'Delete',  tweet, method: :delete,
                  data: {  confirm: 'Delete this tweet?', commit: 'Delete' }, title: ' ' %>
                <% end %>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
